@page "/"

@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Inicio - Sistema de Reservas</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-8">
    <MudPaper Elevation="0" Class="pa-8 mb-6" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 16px;">
        <MudGrid>
            <MudItem xs="12" md="6" Class="d-flex flex-column justify-center">
                <MudText Typo="Typo.h2" Class="mb-4"><b>Viaja con Comodidad</b></MudText>
                <MudText Typo="Typo.h5" Class="mb-6">Reserva tus boletos de autobús de larga distancia de forma rápida y segura</MudText>
                <div>
                    <MudButton Href="/trips" Variant="Variant.Filled" Color="Color.Warning" Size="Size.Large" Class="mr-4">
                        Buscar Viajes
                    </MudButton>
                    <AuthorizeView>
                        <NotAuthorized>
                            <MudButton Href="/register" Variant="Variant.Outlined" Style="color: white; border-color: white;" Size="Size.Large">
                                Registrarse
                            </MudButton>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </MudItem>
            <MudItem xs="12" md="6" Class="d-flex align-center justify-center">
                <MudIcon Icon="@Icons.Material.Filled.DirectionsBus" Style="font-size: 300px; opacity: 0.2;" />
            </MudItem>
        </MudGrid>
    </MudPaper>

    <MudGrid Class="mb-6">
        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="2" Class="pa-4" Style="height: 100%; border-radius: 12px;">
                <MudCardContent Class="d-flex flex-column align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Schedule" Color="Color.Primary" Style="font-size: 60px;" Class="mb-3" />
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2"><b>Horarios Flexibles</b></MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Dark">
                        Múltiples salidas diarias para adaptarnos a tu agenda
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="2" Class="pa-4" Style="height: 100%; border-radius: 12px;">
                <MudCardContent Class="d-flex flex-column align-center">
                    <MudIcon Icon="@Icons.Material.Filled.EventSeat" Color="Color.Success" Style="font-size: 60px;" Class="mb-3" />
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2"><b>Asientos Cómodos</b></MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Dark">
                        Selecciona tu asiento preferido para un viaje placentero
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="2" Class="pa-4" Style="height: 100%; border-radius: 12px;">
                <MudCardContent Class="d-flex flex-column align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Route" Color="Color.Warning" Style="font-size: 60px;" Class="mb-3" />
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2"><b>Rutas Directas</b></MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Dark">
                        Viaja sin escalas innecesarias a tu destino favorito
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="2" Class="pa-4" Style="height: 100%; border-radius: 12px;">
                <MudCardContent Class="d-flex flex-column align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Place" Color="Color.Info" Style="font-size: 60px;" Class="mb-3" />
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2"><b>Múltiples Destinos</b></MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Dark">
                        Conectamos las ciudades más importantes del país
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        @* <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="2" Class="pa-4" Style="height: 100%; border-radius: 12px;">
                <MudCardContent Class="d-flex flex-column align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Discount" Color="Color.Info" Style="font-size: 60px;" Class="mb-3" />
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2"><b>Precios Competitivos</b></MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Dark">
                        Las mejores tarifas del mercado para tu comodidad
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem> *@

        @* <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="2" Class="pa-4" Style="height: 100%; border-radius: 12px;">
                <MudCardContent Class="d-flex flex-column align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Payment" Color="Color.Warning" Style="font-size: 60px;" Class="mb-3" />
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2"><b>Pago Seguro</b></MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Dark">
                        Transacciones protegidas para tu tranquilidad
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudCard Elevation="2" Class="pa-4" Style="height: 100%; border-radius: 12px;">
                <MudCardContent Class="d-flex flex-column align-center">
                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Info" Style="font-size: 60px;" Class="mb-3" />
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2"><b>Confirmación Inmediata</b></MudText>
                    <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Dark">
                        Recibe tu boleto al instante por correo electrónico
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem> *@
    </MudGrid>

    <AuthorizeView>
        <Authorized>
            <MudPaper Elevation="2" Class="mb-6" Style="border-radius: 12px;">
                @if (context.User.IsInRole("Admin"))
                {
                    <MudAlert Severity="Severity.Info" Variant="Variant.Filled" Icon="@Icons.Material.Filled.AdminPanelSettings">
                        <MudText Typo="Typo.h6"><b>Panel de Administración</b></MudText>
                        <MudText Typo="Typo.body2" Class="mt-2">
                            Bienvenido, administrador. Accede al panel de control para gestionar usuarios, viajes y reservas.
                        </MudText>
                        <MudButton Href="/admin/dashboard" Variant="Variant.Text" Color="Color.Inherit" Class="mt-2">
                            Ir al Panel de Administración
                        </MudButton>
                    </MudAlert>
                }
                else
                {
                    <MudGrid Class="pa-6">
                        <MudItem xs="12" md="8">
                            <MudText Typo="Typo.h5" Class="mb-3"><b>¡Bienvenido de nuevo!</b></MudText>
                            <MudText Typo="Typo.body1" Class="mb-4">
                                Estamos felices de verte otra vez. Explora nuestros destinos y reserva tu próximo viaje.
                            </MudText>
                            <MudButton Href="/trips" Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Search">
                                Ver Viajes Disponibles
                            </MudButton>
                            <MudButton Href="/profile" Variant="Variant.Outlined" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Person" Class="ml-3">
                                Mi Perfil
                            </MudButton>
                        </MudItem>
                        <MudItem xs="12" md="4" Class="d-flex align-center justify-center">
                            <MudIcon Icon="@Icons.Material.Filled.Luggage" Color="Color.Primary" Style="font-size: 120px; opacity: 0.3;" />
                        </MudItem>
                    </MudGrid>
                }
            </MudPaper>
        </Authorized>
        <NotAuthorized>
            <MudPaper Elevation="2" Class="pa-6 mb-6" Style="border-radius: 12px; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
                <MudGrid>
                    <MudItem xs="12" md="8">
                        <MudText Typo="Typo.h5" Class="mb-3"><b>¿Nuevo Aquí?</b></MudText>
                        <MudText Typo="Typo.body1" Class="mb-4">
                            Crea una cuenta para acceder a ofertas exclusivas, guardar tus viajes favoritos y gestionar tus reservas fácilmente.
                        </MudText>
                        <MudButton Href="/register" Variant="Variant.Filled" Style="background-color: white; color: #f5576c;" StartIcon="@Icons.Material.Filled.PersonAdd" Class="mr-3">
                            Registrarse
                        </MudButton>
                        <MudButton Href="/login" Variant="Variant.Outlined" Style="color: white; border-color: white;" StartIcon="@Icons.Material.Filled.Login">
                            Iniciar Sesión
                        </MudButton>
                    </MudItem>
                    <MudItem xs="12" md="4" Class="d-flex align-center justify-center">
                        <MudIcon Icon="@Icons.Material.Filled.AccountCircle" Style="font-size: 120px; opacity: 0.3;" />
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </NotAuthorized>
    </AuthorizeView>

    <MudPaper Elevation="2" Class="pa-6" Style="border-radius: 12px;">
        <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-6"><b>¿Por Qué Elegirnos?</b></MudText>
        <MudGrid>
            <MudItem xs="12" md="4">
                <MudCard Elevation="0" Class="pa-4">
                    <MudCardContent>
                        <MudIcon Icon="@Icons.Material.Filled.Star" Color="Color.Warning" Style="font-size: 48px;" Class="mb-2" />
                        <MudText Typo="Typo.h6" Class="mb-2"><b>Servicio de Calidad</b></MudText>
                        <MudText Typo="Typo.body2">
                            Comprometidos con brindarte la mejor experiencia en cada viaje que realices con nosotros.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudCard Elevation="0" Class="pa-4">
                    <MudCardContent>
                        <MudIcon Icon="@Icons.Material.Filled.Map" Color="Color.Success" Style="font-size: 48px;" Class="mb-2" />
                        <MudText Typo="Typo.h6" Class="mb-2"><b>Múltiples Destinos</b></MudText>
                        <MudText Typo="Typo.body2">
                            Conectamos las principales ciudades del país con rutas directas y cómodas.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="12" md="4">
                <MudCard Elevation="0" Class="pa-4">
                    <MudCardContent>
                        <MudIcon Icon="@Icons.Material.Filled.Support" Color="Color.Info" Style="font-size: 48px;" Class="mb-2" />
                        <MudText Typo="Typo.h6" Class="mb-2"><b>Soporte 24/7</b></MudText>
                        <MudText Typo="Typo.body2">
                            Nuestro equipo está disponible las 24 horas para ayudarte con cualquier consulta.
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>
