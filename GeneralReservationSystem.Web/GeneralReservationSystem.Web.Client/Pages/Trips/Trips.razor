                Margin="Margin.Dense" />
            <MudSelect T="int?" Label="Estación de llegada" @bind-Value="_editTripDto.ArrivalStationId"
                For="@(() => _editTripDto.ArrivalStationId)" Variant="Variant.Outlined" Margin="Margin.Dense"
                Immediate="true">
                <MudSelectItem T="int?" Value="null" Disabled="true">Seleccione una estación</MudSelectItem>
                @foreach (var station in _stations)
                {
                    <MudSelectItem T="int?" Value="@station.StationId">
                        @station.StationName, @station.City, @station.Province, @station.Country
                    </MudSelectItem>
                }
            </MudSelect>
            <MudDatePicker Label="Fecha de llegada" Date="_editTripDto.ArrivalTime"
                DateChanged="@(date => OnDateChanged(() => _editTripDto.ArrivalTime, v => _editTripDto.ArrivalTime = v, _updateForm, date))"
                DateFormat="dd/MM/yyyy" Variant="Variant.Outlined"
                Margin="Margin.Dense" />
            <MudTimePicker Label="Hora de llegada" Time="_editTripDto.ArrivalTime?.TimeOfDay"
                TimeChanged="@(time => OnTimeChanged(() => _editTripDto.ArrivalTime, v => _editTripDto.ArrivalTime = v, _updateForm, time))"
                TimeFormat="HH:mm" Variant="Variant.Outlined"
                Margin="Margin.Dense" />
            <MudNumericField Label="Asientos disponibles" @bind-Value="_editTripDto.AvailableSeats"
