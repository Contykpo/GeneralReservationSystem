    </DialogContent>
    <DialogActions>
        <MudButton OnClick="CloseEditDialog" Variant="Variant.Outlined">Cancelar</MudButton>
        <MudButton OnClick="HandleUpdate" Variant="Variant.Filled" Color="Color.Primary">Guardar</MudButton>
    </DialogActions>
