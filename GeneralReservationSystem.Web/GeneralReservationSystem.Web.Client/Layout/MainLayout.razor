@inherits LayoutComponentBase

@using Microsoft.AspNetCore.Components.Authorization

<MudThemeProvider />
<MudDialogProvider />
<MudPopoverProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" >
        <MudText Typo="Typo.h5" Class="ml-3">GRS</MudText>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudText Class="mr-2">@context.User.Identity?.Name</MudText>
            </Authorized>
            <NotAuthorized>
                <MudText Class="mr-2">Anónimo</MudText>
            </NotAuthorized>
        </AuthorizeView>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Edge="Edge.End" OnClick="ToggleDrawer" />
    </MudAppBar>
    <MudDrawerContainer>
        <MudDrawer @bind-Open="@_drawerOpen" Anchor="Anchor.Right" Elevation="1" Variant="@DrawerVariant.Temporary">
            <NavMenu />
        </MudDrawer>
        <MudMainContent>
            @Body
        </MudMainContent>
    </MudDrawerContainer>
</MudLayout>

