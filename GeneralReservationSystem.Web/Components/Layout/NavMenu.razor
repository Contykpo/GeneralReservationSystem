                <MudNavLink Href="/Admin/Destinations">Gestión de Destinos</MudNavLink>
                <MudNavLink Href="/Admin/Trips">Gestión de Viajes</MudNavLink>
                <MudNavLink Href="/Admin/Reservations">Gestión de Reservas</MudNavLink>
                <MudDivider Class="my-2" />
                <MudNavLink Href="/Account/Manage">@context.User.Identity?.Name</MudNavLink>
                <MudNavLink Href="/Account/Logout"><AntiforgeryToken />Cerrar sesión</MudNavLink>
            </Authorized>
            <NotAuthorized>
                <MudNavLink Href="/Account/Register">Registrarse</MudNavLink>
                <MudNavLink Href="/Account/Login">Loguearse</MudNavLink>
            </NotAuthorized>
        </AuthorizeView>
    </MudNavMenu>
