    <MudNavMenu Bordered="true">
        <!-- General navigation -->
        <MudNavLink Href="/">Inicio</MudNavLink>
        <MudNavLink Href="/TripSearch">Buscar Viajes</MudNavLink>
        <MudNavLink Href="/User/Dashboard">Panel de Usuario</MudNavLink>
        <MudNavLink Href="/User/Reservations">Mis Reservas</MudNavLink>

        <!-- Admin section, only for authorized users -->
