@page "/Admin/Dashboard"

<PageTitle>Panel de Administrador</PageTitle>

<h1>Panel de Administrador</h1>

<MudPaper Class="mt-4 p-4">
    <MudText Typo="Typo.h5">Acceso rápido a administración</MudText>
    <MudGrid Class="mt-2" Spacing="2">
        <MudItem xs="12" sm="6" md="4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/Admin/Users" Style="width:100%">Gestión de Usuarios</MudButton>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/Admin/Drivers" Style="width:100%">Gestión de Conductores</MudButton>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/Admin/VehicleModels" Style="width:100%">Gestión de Modelos de Vehículo</MudButton>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/Admin/Vehicles" Style="width:100%">Gestión de Vehículos</MudButton>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/Admin/Destinations" Style="width:100%">Gestión de Destinos</MudButton>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/Admin/Trips" Style="width:100%">Gestión de Viajes</MudButton>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/Admin/Reservations" Style="width:100%">Gestión de Reservas</MudButton>
        </MudItem>
    </MudGrid>
</MudPaper>
