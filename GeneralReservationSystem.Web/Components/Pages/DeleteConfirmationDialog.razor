@using MudBlazor

<MudDialog>
    <TitleContent>
        ¿Estás seguro/a?
    </TitleContent>
    <DialogContent>
        <MudText>Esta acción es permanente y puede llegar a borrar entradas en otras partes del sistema</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="Submit">Eliminar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() => MudDialog.Cancel();
}
